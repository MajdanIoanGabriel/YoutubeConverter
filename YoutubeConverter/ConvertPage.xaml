<Page x:Class="YoutubeConverter.ConvertPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YoutubeConverter"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConvertPage">

    <Grid>
        <TextBox x:Name="Input" HorizontalAlignment="Left" Margin="143,0,0,0" Text="Insert link here" TextWrapping="Wrap" VerticalAlignment="Stretch" Width="257" Height="43" TextAlignment="Left" MaxLines="1" MinLines="1"/>
        <Button x:Name="Convert" Content="Convert!" HorizontalAlignment="Left" Margin="465,0,0,0" VerticalAlignment="Center" Height="43" Width="116" Click="Button_Click"/>
    </Grid>
</Page>
